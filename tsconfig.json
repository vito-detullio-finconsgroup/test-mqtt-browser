{
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}
